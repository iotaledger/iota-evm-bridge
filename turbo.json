{
    "ui": "tui",
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "lint": {},
        "lint:fix": {
            "cache": false
        },
        "prettier:fix": {
            "cache": false
        },
        "typecheck": {
            "dependsOn": ["^build"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        }
    },
    "globalEnv": [
        "VITE_EVM_BRIDGE_CONFIG"
    ]
}
